<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.study.rest.repository.SizeMapper">
    <!--  id : 메소드 명, resultType : 해당 객체 경로를 넣으면 해당 인터페이스 메소드의 리턴 타입이 자동으로 지정 됨  -->
    <select id="findAll" resultType="com.study.rest.entity.Size">
        select
            sizeId,
            sizeName
        from
            size_tb
        order by
            sizeId;
    </select>

    <insert id="save" parameterType="com.study.rest.entity.Size">
        insert into
            size_tb
        values
            (0, #{sizeName});
    </insert>

</mapper>